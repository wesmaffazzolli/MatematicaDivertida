<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.androidpro.matematicadivertida.JogoAritmeticaBasica">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:text="Qual é o resultado da conta abaixo?"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/contaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:text="contaTextView" />

    <EditText
        android:id="@+id/respostaEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contaTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="number"
        tools:text="Digite Aqui..." />

    <Button
        android:id="@+id/buttonEnviarResposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/respostaEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="valida"
        android:text="Enviar Resposta" />

    <TextView
        android:id="@+id/avancoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEnviarResposta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        tools:text="Nº Avanço" />
</android.widget.RelativeLayout>
